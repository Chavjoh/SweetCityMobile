<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">

        <!-- colorPrimary is used for the default action bar background -->
        <item name="android:colorPrimary">#E53935</item>

        <!-- android:textColorPrimary is the  color of the title text
             in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:colorPrimaryDark">#B71C1C</item>

        <item name="android:navigationBarColor">#B71C1C</item>

        <item name="android:textColorPrimary">#FFFFFF</item>

        <item name="android:colorButtonNormal">#B71C1C</item>

        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <item name="android:panelFullBackground">#B71C1C</item>

    </style>

    <!-- Background color for Action Bar overflow menu -->
    <style name="PopupMenu" parent="android:Widget.Material.ListPopupWindow">
        <item name="android:popupBackground">#B71C1C</item>
    </style>

</resources>