<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.hesso.master.sweetcity.activity.report.ShowReportActivity"
    android:weightSum="1">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5"
        android:orientation="horizontal">

        <TextView
            android:text="@string/submitter"
            style="@style/showReportLabel"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_report_user"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:text="@string/votes"
            style="@style/showReportLabel"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_report_votes"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:text="@string/submit_date"
            style="@style/showReportLabel"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_report_date"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:text="@string/tags"
            style="@style/showReportLabel"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_report_tags"
            android:layout_row="3"
            android:layout_column="1" />
    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_report_image" />

</LinearLayout>
