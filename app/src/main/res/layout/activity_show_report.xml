<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.hesso.master.sweetcity.activity.report.ShowReportActivity"
    android:weightSum="1">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:columnCount="2"
        android:rowCount="5"
        android:orientation="horizontal">

        <TextView
            android:text="Submiter"
            style="@style/showReportLabel"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:text="ShowReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showReportUser"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:text="Votes"
            style="@style/showReportLabel"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:text="ShowReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showReportVotes"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:text="Submit date"
            style="@style/showReportLabel"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:text="ShowReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showReportDate"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:text="Tags"
            style="@style/showReportLabel" />
            android:layout_row="3"
            android:layout_column="0"

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShowReport"
            android:id="@+id/showReportTags"
            android:layout_row="3"
            android:layout_column="1" />
    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showReportImage"
        android:layout_below="@+id/textView"
        />

</LinearLayout>
