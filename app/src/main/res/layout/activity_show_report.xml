<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.hesso.master.sweetcity.activity.report.ShowReportActivity"
    >

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:columnCount="2"
        android:rowCount="3"
        android:orientation="horizontal"
        >

        <TextView
            android:text="Submiter"
            style="@style/showReportLabel"
            />

        <TextView
            android:text="ShowReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showReportUser"
            />

        <TextView
            android:text="Votes"
            style="@style/showReportLabel"
            />

        <TextView
            android:text="ShowReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showReportVotes"
            />

        <TextView
            android:text="Submit date"
            style="@style/showReportLabel"
            />

        <TextView
            android:text="ShowReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showReportDate"
            />
    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showReportImage"
        android:layout_below="@+id/textView"
        />

</LinearLayout>
